@model List<MapaViewModel>

<div class="list-group">
    @foreach (var grupoLetra in Model.GroupBy(x => x.Letra.Letra).Select(x => new { Letra = x.Key, Itens = x.ToList() }))
    {
        <div>
            <h3>Grupo @grupoLetra.Letra</h3>
            <hr class="table-responsive hr-cinza-2px" />
            <div id="gp@(grupoLetra.Letra)">
                @foreach (var item in grupoLetra.Itens)
                {
                    <button class="list-group-item list-group-item-@item.Cor.ToLower() cursor-pointer"><span class="float-left" onclick="ChamadasAjax.Visualizar('/ControleMapas/Mapa/Visualizar/@item.ID','Visualizando mapa @item.Letra.Letra@item.Letra.ID');">@item.Letra.Letra@item.Numero - @item.Territorio.Nome </span> <span class="float-right" onclick="ExibirModalExcluirGenerico(@item.ID,'/ControleMapas/Mapa/Excluir/')">excluir</span> </button>
                }
            </div>
        </div>
    }
</div>
